<p style="color: green"><%= notice %></p>

<% if user_signed_in? %>
<table class="table table-stripped table-bordered table-hover" style="font-family:georgia">
<thead>
<tr>
  <th>Name</th>
  <th>Email</th>
  <th>Phone</th>
  <th>Instagram</th>
  <th colspan="1">Manage</th>
</tr>
</thead>

<tbody>
  <% @friends.each do |friend| %>
    <tr>
    <% if friend.user == current_user %>
      <td><%= link_to "#{friend.first_name} #{friend.last_name}", friend, style: "text-decoration:none; color:black" %></td>
      <td><%= friend.email %></td>
      <td><%= friend.phpne %></td> 
      <td><%= friend.twitter %></td>
      <td><%= link_to "Break Up", friend, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger" %></td>
    <% end %>
    </tr>
  <% end %>
</tbody>
</table>

<%= link_to "New friend", new_friend_path, class: "btn btn-dark", style: "font-family:georgia" %>

<% else %>
<h1 class="text-3xl font-bold underline">
    Hello world!
</h1>
<p>Hello</p>

<% end %>


